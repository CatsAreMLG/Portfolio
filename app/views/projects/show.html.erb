<div id="project_show_description" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @project.created_at.strftime("%A, %b %d") %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>
  <div id="description">
    <%= markdown @project.description %>

    <div class="button_wrapper">
      <a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
    </div>

  </div>
  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit", edit_project_path(@project), class: "button" %>
      <%= link_to "Delete", project_path(@project), class: "button btn-red", method: :delete, data: { confirm: "Are you sure you want to delete this project?" } %>
    </div>
  <% end %>
  <hr>

  <div id="share_box">
    <p>Share <%= @project.title %></p>
    <!-- Twitter -->
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @project.title %> by Joshua Gonzalez - &amp;url=<%= request.original_url %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fab fa-twitter"></i>
    </a>
    <!-- Facebook -->
    <a onclick="javascript:window.open('https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fab fa-facebook"></i>
    </a>
    <!-- Google Plus -->
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= request.original_url %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fab fa-google-plus"></i>
    </a>
  </div>
  <hr>
  <%= render 'disqus' %>
</div>
